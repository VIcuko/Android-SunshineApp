<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_weather_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/recycler_view_text_size"
        android:padding="@dimen/recycler_view_padding"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/recycler_view_height"
        android:layout_marginLeft="@dimen/recyvler_view_margin"
        android:layout_marginRight="@dimen/recyvler_view_margin"
        android:background="@color/recycler_view_background_color" />

</LinearLayout>